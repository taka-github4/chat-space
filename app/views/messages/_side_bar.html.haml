.side
  .side__user
    .side__user__name-icon
      .side__user__name-icon__name
        = current_user.name
      .side__user__name-icon__icon
        .side__user__name-icon__icon__left
          = link_to new_group_path do
            = icon('far', 'edit',class: 'btn')
          
        .side__user__name-icon__icon__right
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog', class: 'btn2')
  .side__group
    - current_user.groups.each do |group|
      .side__group__box
        = link_to group_messages_path(group),class:'side__group__box__content' do
          .side__group__box__content__top
            = group.name
          .side__group__box__content__under
            = group.show_last_message